<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialogAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/addContent"
            android:layout_width="300dp"
            android:layout_height="200dp">

            <android.support.v7.widget.RecyclerView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/addRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addContent"
            android:background="@drawable/participant_plus_popup_button">

            <TextView
                android:id="@+id/cancelAdd"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#b2b2b2"
                android:text="취소" />

            <TextView
                android:id="@+id/submitAdd"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/cancelAdd"
                android:textSize="14sp"
                android:textColor="#638da6"
                android:text="미입금자 추가" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>