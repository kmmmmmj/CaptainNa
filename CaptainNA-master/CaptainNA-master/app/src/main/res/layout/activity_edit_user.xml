<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <!--툴바-->
    <include
        android:id="@+id/tbMakeGroup"
        layout="@layout/tool_bar_edit_user" />


    <!--그룹 이미지-->
    <LinearLayout
        android:id="@+id/llgroupImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/editprofileImg"
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:src="@drawable/user_default_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:id="@+id/linearLayout3">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:src="@drawable/group_photo_outline"/>
    </LinearLayout>

    <!--그룹 이미지 등록하기-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="203dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivRegisterImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_group_photo"/>
    </LinearLayout>


    <!--정보 입력 수직-->
    <LinearLayout
        android:id="@+id/llinfoEnter"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp">

        <!--모임명 수평-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--이미지01-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_name"/>
            </LinearLayout>

            <!--모임명 입력-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etGroupName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:textSize="14sp"
                    android:hint="이름"
                    android:textColor="#ff333333"
                    android:background= "@null"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
        </LinearLayout>
        <!--모임명 수평 끝-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_group_line" />
        </LinearLayout>



        <!--모임 한 줄 소개 수평-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="33dp">

            <!--이미지02-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/user_mail"/>
            </LinearLayout>

            <!--모임 한줄 소개 입력-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etUserEmail"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="E-mail"
                    android:textColor="#ff333333"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:lines="1"
                    android:textCursorDrawable="@null"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>
        </LinearLayout>
        <!--모임 한줄 소개 수평 끝-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_group_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="33dp">

            <!--이미지02-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/user_call"/>
            </LinearLayout>

            <!--회원 전화번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etGroupIntro"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="전화번호"
                    android:textColor="#ff333333"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:lines="1"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
        </LinearLayout>
        <!--모임 한줄 소개 수평 끝-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_group_line" />
        </LinearLayout>

        <!--비밀번호 소개 수평-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="33dp">

            <!--이미지02-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/make_group_img03"/>
            </LinearLayout>

            <!--모임 한줄 소개 입력-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etPwdSetting"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="비밀번호 설정"
                    android:textColor="#ff333333"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:lines="1"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
        </LinearLayout>
        <!--모임 한줄 소개 수평 끝-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_group_line" />
        </LinearLayout>




        <!--비밀번호 확인 수평-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="33dp">

            <!--이미지02-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/make_group_img03"/>
            </LinearLayout>

            <!--모임 한줄 소개 입력-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etPwdCheck"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="비밀번호 확인"
                    android:textColor="#ff333333"
                    android:layout_marginLeft="24dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:lines="1"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>
        </LinearLayout>
        <!--비밀번호 확인 수평 끝-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_group_line" />
        </LinearLayout>
    </LinearLayout>
    <!--정보 입력 수직 끝-->


    <!--등록하기-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/layout_delet">

        <LinearLayout
            android:id="@+id/llGroupDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="17dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#828282"
                android:text="로그아웃"/>

        </LinearLayout>
    </LinearLayout>








</RelativeLayout>
