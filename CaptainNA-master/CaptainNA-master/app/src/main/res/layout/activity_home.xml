<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:openDrawer="left">-->

    <!--메인 홈 화면-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!--툴바-->
        <include
            android:id="@+id/tbHome"
            layout="@layout/tool_bar_home" />

        <!--툴바 밑에-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbHome">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/layout_actionbar_under" />
        </LinearLayout>

        <!--최근행사 text-->
        <LinearLayout
            android:id="@+id/llrecentEventTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tbHome"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 행사"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>

        <!--더보기 text-->
        <LinearLayout
            android:id="@+id/llviewMoreTxt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tbHome"
            android:layout_marginRight="11dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="더보기 >"
                android:textColor="#777777"
                android:textSize="12sp" />
        </LinearLayout>


        <!--최근 행사 뷰페이저-->
        <LinearLayout
            android:id="@+id/llvp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/llrecentEventTxt"
            android:layout_marginTop="14dp"
            android:background="#FFFFFF">
            <org.sopt.captainna.activity.PagerContainer
                android:id="@+id/pc"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="241dp"
                    android:layout_height="197dp"
                    android:layout_gravity="center_horizontal" />
            </org.sopt.captainna.activity.PagerContainer>
        </LinearLayout>

        <!--구분선-->
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@+id/llvp"
            android:layout_marginTop="14dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:src="@drawable/layout_cuttingbar" />
        </LinearLayout>

        <!--내 모임 텍스트-->
        <LinearLayout
            android:id="@+id/llmyGroupTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 모임"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>

        <!--내 모임 뷰페이저-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llmyGroupTxt"
            android:layout_marginTop="16dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vpMyGroups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tabDots"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

    </RelativeLayout>
    <!--메인 홈 화면 끝-->

    <!--네비게이션-->
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/mypage"
        android:orientation="vertical">


        <!--상단 부분-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:orientation="vertical">
            <!--닫기 버튼-->
            <LinearLayout
                android:id="@+id/lldelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="245dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_delete" />
            </LinearLayout>


            <!--상단 두번째 시작-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-30dp"
                android:orientation="horizontal">


                <!--프로필 이미지-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        tools:src="@drawable/bluetree" />
                </LinearLayout>

                <!--프로필 이미지 옆 부분 수직-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <!--이름, 프로필 수정-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--이름-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/profileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                tools:text="고준희" />
                        </LinearLayout>

                        <!--프로필 수정하기 버튼-->
                        <LinearLayout
                            android:id="@+id/editProfile"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="2dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/profile_edit_button" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/profileEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            tools:text="yusun1015@naver.com" />
                    </LinearLayout>
                </LinearLayout>
                <!--프로필 이미지 옆 부분 수직-->
            </LinearLayout>
            <!--상단 두번째 끝-->

        </LinearLayout>


        <!--내 행사 텍스트-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mypage_word1" />
        </LinearLayout>


        <!--내 행사 리사이클러뷰-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMyevent"
                android:layout_width="wrap_content"
                android:layout_height="130dp" />
        </LinearLayout>


        <!--나 총무 텍스트-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mypage_word2" />
        </LinearLayout>

        <!--나 총무 리사이클러뷰-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvMyCaptain"
                android:layout_width="wrap_content"
                android:layout_height="130dp" />
        </LinearLayout>


        <!--나 모임장 텍스트-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mypage_word3" />
        </LinearLayout>

        <!--나 총무 리사이클러뷰-->
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvReader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <!--네비게이션 끝-->


</android.support.v4.widget.DrawerLayout>