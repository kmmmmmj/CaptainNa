<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp">


    <!--행사 이름 =-->
    <LinearLayout
        android:id="@+id/llEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="#80ffffff"
            tools:text="NFB" />
    </LinearLayout>


    <!--설명-->
    <LinearLayout
        android:id="@+id/llIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/llEventName"
        android:layout_below="@+id/llEventName"
        android:layout_alignBottom="@+id/lldDayNum">

        <TextView
            android:id="@+id/tvEventIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            tools:text="한양대 축구대회" />
    </LinearLayout>


    <!--입금 미입금-->
    <LinearLayout
        android:id="@+id/llgiverCheck"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llEventName"
        android:layout_marginRight="35dp"
        android:gravity="left">

        <TextView
            android:id="@+id/tvMoneyCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#ffffff"
            tools:text="입금" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lldDayNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/llgiverCheck"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/llgiverCheck"
        android:gravity="left">

        <TextView
            android:id="@+id/tvDday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#d3d3d3"
            android:text="100" />
    </LinearLayout>

</RelativeLayout>